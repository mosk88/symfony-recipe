{% extends 'base.html.twig' %}

{% block title %}categories{% endblock %}

{% block body %}
<h1 class="text-8xl text-center p-5"> Category</h1>
<ul class="text-center  p-10">


        <div class="container mx-auto p-4">  
           <h1 class = "text-4xl p-5"> Category: {{ category.name}}</h1>
           <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
   
        {% for recipe in category.recipe %}
            
            <div class="bg-white  shadow-md rounded-lg overflow-hidden">
                <div class="p-5">
                <h3 class="text-3xl bg-gray-500 text-black p-5">{{ recipe.title }}</h3>
                <img src="{{ asset ('image/tajin.jpg')}}"  alt="">
                <p class="text-3xl text-black p-5" >{{ recipe.content }}</p>
               </div>
            </div>
        {% else %}
            <li>No Recipe found for this category.</li>
        {% endfor %}

    </div>
    </div>
        

{% endblock %}